# Configuración de Staging/Pruebas
# Entorno intermedio entre desarrollo y producción

# Django Core
SECRET_KEY=staging-key-cambiar-por-una-real
DEBUG=False
ALLOWED_HOSTS=staging.tudominio.com,localhost

# Base de datos PostgreSQL
DB_ENGINE=postgresql
DB_NAME=inventario_staging
DB_USER=inventario_staging
DB_PASSWORD=staging-password
DB_HOST=localhost
DB_PORT=5432

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://staging.tudominio.com

# Seguridad (menos estricta que producción)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Email (usar consola para testing)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Logs
LOG_LEVEL=DEBUG
LOG_FILE=/var/log/inventario/staging.log
