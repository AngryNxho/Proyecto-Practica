[flake8]
max-line-length = 120
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    */migrations/*,
    venv,
    env,
    node_modules,
    htmlcov,
    .coverage,
    build,
    dist
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    F401,  # imported but unused (en __init__.py)
    E731,  # lambda assignment
per-file-ignores =
    __init__.py:F401
    tests.py:E501
    settings.py:E501
