[flake8]
max-line-length = 120
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    */migrations/*,
    venv,
    env,
    node_modules,
    htmlcov,
    .coverage,
    build,
    dist
ignore = 
    E203,  # espacio antes de ':'
    E501,  # linea muy larga (manejado por max-line-length)
    W503,  # salto de linea antes de operador binario
    F401,  # importado pero no usado (en __init__.py)
    E731,  # asignacion de lambda
per-file-ignores =
    __init__.py:F401
    tests.py:E501
    settings.py:E501
